APP_ENVIRONMENT=production
APP_API_URL="http://your-domain.com/api"
APP_PORT=3000
APP_HOST_API=0.0.0.0
APP_API_SECRET=your-secret-key-here-change-this-in-production


# ===== DATABASE - MARIADB =====
DATABASE_URL="mysql://username:password@localhost:3306/srv_assets_example?charset=utf8mb4&timezone=UTC"


# ===== SEGURANÇA =====
API_KEY=your-api-key-here-generate-a-secure-one
CORS_ORIGIN=*

# ===== UPLOAD =====
UPLOAD_MAX_FILE_SIZE_IMAGE=2097152          # 2MB em bytes
UPLOAD_MAX_FILE_SIZE_DOCUMENT=5242880       # 5MB em bytes
UPLOAD_MAX_FILE_SIZE_SPREADSHEET=5242880    # 5MB em bytes
UPLOAD_MAX_FILE_SIZE_GLOBAL=10485760        # 10MB em bytes
UPLOAD_MAX_FILES=10                          # Máx arquivos por requisição
UPLOAD_PATH=./upload
UPLOAD_SERVE_PATH=/uploads                   # Path público

# ===== RATE LIMITING =====
THROTTLE_TTL=3600000                         # 1 hora em ms
THROTTLE_UPLOAD_LIMIT=10                     # 10 uploads/hora
THROTTLE_DOWNLOAD_LIMIT=100                  # 100 downloads/hora
THROTTLE_API_LIMIT=500                       # 500 requisições/hora

# ===== IMAGE PROCESSING =====
IMAGE_GENERATE_THUMBNAIL=true
IMAGE_THUMBNAIL_WIDTH=200
IMAGE_THUMBNAIL_HEIGHT=200
IMAGE_GENERATE_PREVIEW=true
IMAGE_PREVIEW_WIDTH=800
IMAGE_PREVIEW_HEIGHT=600
IMAGE_COMPRESSION_QUALITY=80


# ===== LOGGING =====
LOG_LEVEL=info                               # debug | info | warn | error
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
